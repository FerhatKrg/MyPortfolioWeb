@model List<ToDoList>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yapılacaklar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yapılacakklar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">ID</th>
									<th scope="col">İçerik</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ToDoListId</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										<td>@item.Status</td>
										@if (item.Status == true)
										{

											<td><a href="/ToDoList/ChangeIsreadToFalse/@item.ToDoListId" class="btn btn-dark">Yapılmadı Olarak Değiştir</a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangeIsreadToTrue/@item.ToDoListId" class="btn btn-info">Yapıldı Olarak Değiştir</a></td>

										}
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
										<td><a href="/ToDoList/UpdateTodoList/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/ToDoList/CreateToDoList/" class="btn btn-primary">Yeni ToDo Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

